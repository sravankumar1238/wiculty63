pipeline {
    agent any

	tools {
		jdk 'jdk11'
	}

//	environment {
//		M2_INSTALL = "/usr/bin/mvn"
//	}

	environment {
       DOCKER_HUB_PASSWORD = credentials('DOCKER_HUB_PASSWORD')
    }

    stages {
        stage('Clone-Repo') {
	    	steps {
	        	checkout scm
	    	}
        }

        stage('Build') {
            steps {
                sh 'mvn install -Dmaven.test.skip=true'
            }
        }
		
//        stage('Unit Tests') {
//            steps {
//                sh 'mvn compiler:testCompile'
//                sh 'mvn surefire:test'
//                junit 'target/**/*.xml'
//            }
//        }
		stage('Build Images') {
			steps {
				sh 'docker build -t sravankumar1238/k8s1-img .'
			}
		}

		stage('Image Push') {
			steps {
				sh 'docker login -u sravankumar1238 -p $DOCKER_HUB_PASSWORD'
				sh 'docker push sravankumar1238/k8s1-img '
			}
		}

        stage('Cluster Connect') {
           steps {
				sh 'gcloud container clusters get-credentials wiculty63 --region us-central1 --project endless-ripple-452811-g3'
           }
        }
		
		stage('K8S Deployment') {
			steps {
				script {
					echo "Jenkins is able to connect to the cluster and starting image Deployment.. "
					sh 'kubectl apply -f /home/vboxuser/wiculty/deployment.yaml'
					sh 'kubectl apply -f /home/vboxuser/wiculty/service.yaml'
				}
			}
		}

    }
}
